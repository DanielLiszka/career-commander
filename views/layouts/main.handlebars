<!DOCTYPE html>
<html lang='en'>

<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>

  <!-- Bootstrap CSS --> 
    <link
        rel='stylesheet'
        href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
        integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
        crossorigin='anonymous'
    />

  <title>Career Commander</title>

</head> 
<header>
    <h1 class='text-center'>Career Commander</h1>
</header>
<body> 
    <!-- Navigation Bar-->
    <nav class='navbar navbar-expand-md nav-fill w-100 bg-light'>
        <div class='align-middle px-4'> Welcome {{user.first_name}} {{user.last_name}} </div>
        <div class='navigator mx-auto' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item'>
              <a class='nav-link' href='/application'>Application</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/dashboard'>Dashboard</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/' id="logout"> Logout</a>
            </li>
          </ul>
        </div>
        <div class="text-black px-4">
          <a><span class="date px-3"></span></a> 
          <a><span class="hours"></span></a> :
          <a><span class="minutes"></span></a> :
          <a><span class="seconds"></span></a>
        </div>
    </nav>

    <!-- Main Content Will Go Here --> 
    <div class='container'>
      {{{ body }}}
    </div>

    <!-- Footer --> 
    <footer class='footer bg-secondary text-light' style='text-align: center; justify-content: center;'>
      @2022 Harrison Daniel, Mark Elliott, Daniel Liszka
    </footer>

    <!-- JQuery Ajax -->
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js'></script>
    <script src='https://code.jquery.com/jquery-3.5.1.min.js'></script>
    <!-- Bootstrap -->
    <script 
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>

    <!-- Day JS --> 
    <script src='https://unpkg.com/dayjs@1.8.21/dayjs.min.js'></script>

    <!-- Datepicker --> 
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js'></script>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css'/>

</body>

<script src="/js/main.js"></script>

{{#each js}}
<script src="/js/{{this}}"></script>
{{/each}}
