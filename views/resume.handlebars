<!-- Resume Input Fields-->
<div class = "row mt-5 mb-5 d-flex justify-content-center">
  <div class='col-md-6 center-block'>
    <h3 class ="text-center">Resume</h2>
    <form class='resume_name text-center mt-5'>
      <div class='form-group'>
        <label for='resume_name'>Resume Name</label>
        <input
          type='text'
          class='form-control'
          id='resume_name-input'
          placeholder=''
        />
      </div>
      <div class='form-group mt-4'>
        <label for='resume_description'>Resume Description</label>
        <textarea
          class='form-control form-control-lg'
          id='resume_description-input'
          rows="5"
        ></textarea>
      </div>
      <button type='submit' class='btn btn-default mt-2'>Submit</button>
    </form>
  </div>
</div>