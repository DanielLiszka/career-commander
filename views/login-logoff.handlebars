<!-- Login WIP-->
<div class='align-middle'>
  <h2>Login</h2>
  <form class='login'>
    <div class='form-group'>
      <label for='login_email'>Email address</label>
      <input
        type='email'
        class='form-control'
        id='email-input'
        placeholder='Email'
      />
    </div>
    <div class='form-group'>
      <label for='login_password'>Password</label>
      <input
        type='password'
        class='form-control'
        id='password-input'
        placeholder='Password'
      />
    </div>
    <button type='submit' class='btn btn-default'>Login</button>
  </form>
</div>
<br />
