<!-- Change Password InputFields-->
<div class='row mt-5 mb-5 d-flex justify-content-center'> 
  <div class='col-md-4 center-block' id="change">
    <h3 class='text-center'>Change Password</h2>
    <form class='change-password text-center mt-3 needs-validation' novalidate>
      <div class='form-group'>
        <label for='change_email'>Email address</label>
        <input
          type='email'
          class='form-control'
          id='change_email-input'
          placeholder='Email'
         required>
      </div>
      <div class='form-group mb-3'> 
        <label for='new_password'>New Password</label>
        <input
          type='password'
          class='form-control'
          id='new_password-input'
          placeholder='New Password' 
        required>
      </div>
         <div class='form-group mb-3'> 
        <label for='old_password'>Old Password</label>
        <input
          type='password'
          class='form-control'
          id='old_password-input'
          placeholder='Old Password' 
        required>
      </div>
      <div class="d-flex justify-content-evenly mb-3"> 
        <button type="submit" class="btn btn-primary">Change Password</button>
        <button onclick="location.href='/'" type="button" class="btn-danger">
            Login 
        </button>
      </div> 
    </form>
  </div>
</div>