<!-- Change Password InputFields-->
<div class="container w-100">
<div class='row mt-5 mb-5 d-flex justify-content-center'> 
  <div class='col-md-4 center-block' >
    <h3 class='text-center'>Change Password</h2>
    <form id="change-password" class='text-center mt-3 needs-validation' novalidate>
      <input type = 'text' value = '{{user.id}}' id='user-id' hidden>
      <div class='form-group'>
        <label for='change_email'>Email address</label>
        <input
          type='email'
          class='form-control'
          id='change_email-input'
          {{!-- placeholder='E-mail' --}}
          value='{{user.email}}'
          placeholder={{user.email}}
         >
      </div>
      <div class='form-group mb-3'> 
        <label for='new_password'>New Password</label>
        <input
          type='password'
          class='form-control'
          id='new_password-input'
          placeholder='New Password' 
        required>
      </div>
      <div class="d-flex justify-content-evenly mb-3"> 
        <button type="submit" class="btn btn-primary">Change Password</button>
      </div> 
    </form>
  </div>
</div>
</div>